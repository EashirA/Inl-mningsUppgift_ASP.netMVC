@model  E_ShopMVC.ViewModels.Category.CreateCategoryViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                <h2>Create New</h2>
            </th>
            <th></th>
        </tr>
        <tr>
            <td>@Html.ActionLink("Category", "Index", new {}, null)</td>
            <td>

                @Html.TextBoxFor(model => model.CategoryName)
                @Html.ValidationMessageFor(model => model.CategoryName)
            </td>
        </tr>
        <tr>
            <td>Description</td>
            <td>
                @Html.TextAreaFor(p => p.Description)
                @Html.ValidationMessageFor(p => p.Description)
            </td>
        </tr>
    </table>
    <input type="submit" value="Save"/>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
