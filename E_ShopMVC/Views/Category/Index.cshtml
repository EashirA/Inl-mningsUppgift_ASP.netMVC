@model  E_ShopMVC.ViewModels.Category.CategoryIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2 style="font-family: cursive; color: orange">All Categories</h2>




<table class="table">
    <tr>
        <th>Category</th>
        <th>Description</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>@Html.ActionLink(item.CategoryName, "View", "Product", new { id = item.CategoryId }, null)</td>
            <td>@item.CategoryDescription</td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("  ", "Edit", new { id = item.CategoryId }, new { @class = "glyphicon glyphicon-pencil" }) | 
                    @Html.ActionLink("  ", "Delete", new { id = item.CategoryId }, new { @class = "glyphicon glyphicon-trash",
                        onclick = "return confirm('Are sure you want to delete this category with all products within?');" })
                </td>
            }

        </tr>
    }

</table>

<br />
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create", new { })
    </p>
}



