@model  E_ShopMVC.ViewModels.CategoryIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>eShop</h2>



<table class="table">
    <tr>
        <th>Category</th>
        <th>Description</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>@Html.ActionLink(item.CategoryName, "View", "Product", new { id = item.CategoryId }, null)</td>
            <td>@item.CategoryDescription</td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                    @Html.ActionLink("Remove", "Delete", new { id = item.CategoryId }, new { onclick = "return confirm('Are sure you want to delete this category?');" })
                </td>
            }

        </tr>
    }

</table>

<br />
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create", new { })
    </p>
}



